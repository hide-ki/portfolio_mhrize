= form_with model: user, url: url, local: true do |f|
  
  .mx-auto
    .field
      = f.label :email, User.human_attribute_name(:email), class: 'col-md-12'
      = f.email_field :email, class: 'form-field'

    .field
      = f.label :password, User.human_attribute_name(:password), class: 'col-md-12'
      .password-field
        = f.password_field :password, class: 'form-field'
    
    .field.text-center
      = label_tag :remember, 'ログイン維持'
      = check_box_tag :remember, params[:remember], true

    .actions.text-center
      = f.submit t 'defaults.login'

  .text-center.mb-3.mt-3
    = link_to '新規登録がまだの方はこちら', new_user_path, class: 'new-user-link'

  .text-center.mb-3.mt-3
    = link_to 'パスワードを忘れた方はこちら', new_password_reset_path, class: 'reset-password'

  .text-center.mb-3.mt-3
    = link_to 'Login with Twitter', auth_at_provider_path(provider: :twitter)
